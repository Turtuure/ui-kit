{
  "name": "Main branch protection for Archon UI Kit",
  "target": "branch",
  "enforcement": "active",
  "conditions": {
    "ref_name": {
      "include": ["~DEFAULT_BRANCH"]
    }
  },
  "rules": [
    {
      "type": "pull_request",
      "parameters": {
        "required_approving_review_count": 1,
        "dismiss_stale_reviews_on_push": true,
        "require_code_owner_review": false,
        "require_last_push_approval": false,
        "required_status_checks": [
          {
            "context": "CI Checks / build (pull_request)",
            "strict": true
          }
        ],
        "require_deployments_to_pass": false,
        "required_linear_history": false,
        "allow_fork_syncing": true,
        "merge_queue_enabled": false,
        "required_conversation_resolution": false,
        "allow_merge_unstable_branches": false
      }
    },
    {
      "type": "commit_message_pattern",
      "parameters": {
        "name": "Conventional Commits",
        "pattern": "^(feat|fix|build|chore|ci|docs|refactor|revert|style|test)\\([\\w-.]+\\): .*(?s)",
        "negate": false,
        "operator": "starts_with"
      }
    },
    {
      "type": "non_fast_forward_merge",
      "parameters": {}
    },
    {
      "type": "require_branches_to_be_up_to_date",
      "parameters": {}
    }
  ],
  "bypass_actors": []
}